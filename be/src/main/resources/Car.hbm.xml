<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.example.project.domain.model">

    <class name="com.example.project.domain.model.Car" table="Cars">
        <composite-id>
            <key-property name="id" type = "java.lang.Integer" column="id"/>
        </composite-id>
        <property name="model" type = "java.lang.String" column="model"/>
        <property name="manufacturer" type = "java.lang.String" column="manufacturer"/>
        <property name="productionYear" type = "java.lang.Integer" column="productionYear"/>
    </class>

</hibernate-mapping>